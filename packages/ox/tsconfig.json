{
	"extends": "@tevm/tsconfig/base.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "types",
		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"checkJs": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true,
		"paths": {
			"ox/core/*": ["./node_modules/ox/dist/core/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/*.spec.ts", "dist", "types"]
}

{
	"extends": "@tevm/tsconfig/base.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "types",
		"skipLibCheck": true,
		"types": ["bun-types"],
		"ignoreDeprecations": "5.0",
		// Temporarily relaxed settings for zod replacement
		// This is to allow the build to succeed while transitioning
		// away from zod to vanilla JS validation. Once the transition is complete,
		// these settings should be removed and the code should be fixed to comply
		// with the stricter type checking.
		"noImplicitAny": false,
		"strictNullChecks": false,
		"exactOptionalPropertyTypes": false,
		"skipDefaultLibCheck": true,
		// Additional flags to temporarily help build:types succeed
		"noImplicitThis": false,
		"noPropertyAccessFromIndexSignature": false,
		"noImplicitReturns": false,
		"strictFunctionTypes": false,
		"strictPropertyInitialization": false
	},
	"include": ["src", "src/**/*.json"]
}

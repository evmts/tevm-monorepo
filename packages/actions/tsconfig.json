{
	"extends": "@tevm/tsconfig/base.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "types",
		"skipLibCheck": true,
		"types": ["bun-types"],
		"noImplicitAny": false,
		"ignoreDeprecations": "5.0"
	},
	"include": ["src", "src/**/*.json"],
	"exclude": ["src/test/**/*", "**/*.spec.ts", "**/*.test.ts"]
}

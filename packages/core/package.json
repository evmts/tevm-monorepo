{
  "name": "@evmts/core",
  "description": "A typesafe library for writing forge scripts in typescript",
  "version": "0.0.3",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "src/index.ts",
  "type": "module",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/evmts/evmts-monorepo.git",
    "directory": "packages/core"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "envSchema": "ts-node src/scripts/envSchema.ts",
    "build": "tsup",
    "//test": "vitest",
    "//test:ui": "vitest --ui",
    "//test:run": "vitest run",
    "lint": "rome check . --apply-suggested",
    "lint:check": "rome check ."
  },
  "devDependencies": {
    "@vitest/ui": "^0.28.5",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5",
    "vitest": "^0.28.5",
    "zod": "^3.20.6"
  },
  "dependencies": {
    "@babel/helper-plugin-utils": "^7.20.2",
    "@ethereumjs/block": "^4.1.0",
    "@ethereumjs/common": "^3.0.2",
    "@ethereumjs/tx": "^4.0.2",
    "@ethereumjs/util": "^8.0.3",
    "@ethereumjs/vm": "^6.3.0",
    "@ethersproject/abi": "^5.7.0",
    "@types/babel-core": "^6.25.7",
    "viem": "^0.2.12"
  },
  "keywords": [
    "solidity",
    "forge",
    "foundry",
    "sol",
    "typescript",
    "web3",
    "blockchain"
  ]
}

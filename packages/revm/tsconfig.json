{
  "extends": "../../configs/tsconfig/base.json",
  "include": ["src"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "revm-wasm": ["./pkg/tevm_revm"]
    }
  }
}
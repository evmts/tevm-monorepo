{
	"extends": "@tevm/tsconfig/base.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "types",
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"exactOptionalPropertyTypes": false,
		"noCheck": true
	},
	"include": ["src", "src/**/*.json"],
	"exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"]
}

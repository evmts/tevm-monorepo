{
  "name": "@tevm/trevm-native",
  "version": "0.1.0",
  "description": "Native bindings for trevm Ethereum VM",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "npm run build:rust && npm run build:js",
    "build:rust": "cargo-cp-artifact -nc dist/index.node -- cargo build --message-format=json-render-diagnostics",
    "build:js": "tsup src/js/index.ts --format=esm,cjs --dts",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evmts/tevm-monorepo.git"
  },
  "keywords": [
    "ethereum",
    "evm",
    "trevm"
  ],
  "author": "Tevm Contributors",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/evmts/tevm-monorepo/issues"
  },
  "homepage": "https://github.com/evmts/tevm-monorepo#readme",
  "dependencies": {
    "@tevm/errors": "workspace:*",
    "@tevm/logger": "workspace:*",
    "@tevm/state": "workspace:*"
  },
  "devDependencies": {
    "cargo-cp-artifact": "^0.1",
    "napi-rs": "^2.16.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  }
}
{
	"name": "@evmts/config",
	"version": "0.10.0",
	"private": false,
	"description": "Manages config for evmts",
	"keywords": [
		"solidity",
		"forge",
		"foundry",
		"sol",
		"typescript",
		"web3",
		"blockchain"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/evmts/evmts-monorepo.git",
		"directory": "config"
	},
	"license": "MIT",
	"contributors": [
		"Will Cory <willcory10@gmail.com>"
	],
	"type": "module",
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "types/src/index.d.ts",
	"files": [
		"dist",
		"types",
		"src"
	],
	"scripts": {
		"build": "nx run-many --targets=build:dist,build:types --projects=@evmts/config ",
		"build:dist": "bun run tsup",
		"build:types": "bun run tsc --emitDeclarationOnly",
		"clean": "rm -rf node_modules && rm -rf artifacts && rm -rf dist && rm -rf cache",
		"format": "rome format . --write",
		"format:check": "rome format .",
		"generate:docs": "bun run typedoc",
		"lint": "rome check . --apply-unsafe",
		"lint:check": "rome check . --verbose",
		"test": "vitest --coverage",
		"test:coverage": "vitest run --coverage",
		"test:run": "vitest run",
		"test:ui": "vitest --ui"
	},
	"dependencies": {
		"@types/node": "^20.7.2",
		"bundle-require": "^4.0.2",
		"jsonc-parser": "^3.2.0",
		"viem": "^1.14.0"
	},
	"devDependencies": {
		"@evmts/tsconfig": "workspace:^",
		"@vitest/coverage-v8": "^0.34.6",
		"@vitest/ui": "^0.34.6",
		"rome": "^12.1.3",
		"tsup": "^7.2.0",
		"typedoc": "^0.25.2",
		"typedoc-plugin-markdown": "^3.16.0",
		"typescript": "^5.2.2",
		"vitest": "^0.34.6",
		"zod": "^3.22.2"
	},
	"peerDependencies": {
		"solc": "*"
	},
	"publishConfig": {
		"access": "public"
	}
}

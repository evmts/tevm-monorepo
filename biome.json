{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useImportType": "off",
				"noNonNullAssertion": "off"
			},
			"performance": {
				"noDelete": "off",
				"noAccumulatingSpread": "off"
			},
			"complexity": {
				"noForEach": "off",
				"noBannedTypes": "off",
				"useLiteralKeys": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noGlobalAssign": "off",
				"noArrayIndexKey": "off",
				"noConfusingVoidType": "off",
				"noAssignInExpressions": "off",
				"noRedeclare": "off",
				"noImplicitAnyLet": "off"
			},
			"a11y": {
				"useKeyWithClickEvents": "off",
				"useSemanticElements": "off",
				"useFocusableInteractive": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "all",
			"semicolons": "asNeeded"
		}
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}

{
	"name": "@evmts/webpack-plugin",
	"version": "0.11.2",
	"private": false,
	"description": "A webpack plugin for evmts",
	"contributors": ["Will Cory <willcory10@gmail.com>"],
	"keywords": ["webpack", "plugin", "solidity", "sol", "evmts"],
	"repository": {
		"type": "git",
		"url": "https://github.com/evmts/evmts-monorepo.git",
		"directory": "packages/plugin"
	},
	"license": "MIT",
	"type": "module",
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "types/index.d.ts",
	"files": ["dist", "src", "types"],
	"scripts": {
		"build": "nx run-many --targets=build:dist,build:types --projects=@evmts/webpack-plugin ",
		"build:dist": "bun run tsup",
		"build:types": "bun run tsc --emitDeclarationOnly",
		"clean": "rm -rf node_modules && rm -rf artifacts && rm -rf dist && rm -rf cache",
		"format": "rome format . --write",
		"generate:docs": "bun run typedoc",
		"format:check": "rome format .",
		"lint": "rome check . --apply-unsafe",
		"lint:check": "rome check . --verbose",
		"test": "bun run vitest",
		"test:run": "bun run vitest run",
		"test:ui": "bun run vitest --ui"
	},
	"dependencies": {
		"@evmts/bundler": "workspace:^"
	},
	"devDependencies": {
		"@evmts/tsconfig": "workspace:^",
		"@vitest/ui": "^0.34.6",
		"rome": "^12.1.3",
		"typedoc": "^0.25.2",
		"typedoc-plugin-markdown": "^3.16.0",
		"tsup": "^7.2.0",
		"typescript": "^5.2.2",
		"vitest": "^0.34.6"
	},
	"peerDependencies": {
		"webpack": ">5.0.0"
	},
	"publishConfig": {
		"access": "public"
	}
}

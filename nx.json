{
  "defaultProject": "@evmts/example-vite",
  "targetDefaults": {
    "lint": {
      "inputs": ["default"]
    },
    "format": {
      "inputs": ["default"]
    },
    "test": {
      "inputs": [
        "default"
      ],
      "dependsOn": [
        "^build",
        "pretest"
      ]
    },
    "test:run": {
      "inputs": [
        "default"
      ],
      "dependsOn": [
        "defualt",
        "^build",
        "pretest"
      ]
    },
    "test:watch": {
      "inputs": [
        "default"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "test:coverage": {
      "inputs": [
        "default"
      ],
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "{projectRoot}/coverage"
      ]
    },
    "typecheck": {
      "inputs": [
        "{projectRoot}/**/*",
        "sharedGlobals"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "serve": {
      "dependsOn": [
        "build"
      ]
    },
    "build": {
      "inputs": [
        "production"
      ],
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "buildArtifacts"
      ]
    },
    "dev": {
      "dependsOn": [
        "^build"
      ]
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx-cloud",
      "options": {
        "cacheableOperations": [
          "build",
          "test:coverage",
          "test:run",
          "format:check",
          "typecheck",
          "e2e",
          "format:check",
          "lint:check"
        ],
        "accessToken": "MWI0MzBiNGItMzE0Ni00MGU3LWIxZGQtY2Q2ZDlmMDIzOTMwfHJlYWQ="
      }
    }
  },
  "affected": {
    "defaultBase": "main"
  },
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/tsconfig.json",
      "{workspaceRoot}/nx.json"
    ],
    "productionSrc": [
      "{projectRoot}/src/**/*",
      "!{projectRoot}/src/**/*.spec.ts"
    ],
    "productionContracts": ["{projectRoot}/contracts/**/*"],
    "production": ["productionSrc", "productionContracts"],
    "buildArtifacts": ["{projectRoot}/dist", "{projectRoot}/types", "{projectRoot}/artifacts", "{projectRoot}/deployments"],
    "testing": ["configsWorkspace", "default"]
  }
}

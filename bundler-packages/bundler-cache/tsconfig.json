{
	"extends": "@tevm/tsconfig/base.json",
	"compilerOptions": {
		"outDir": "types",
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"noImplicitAny": false,
		"types": ["vitest/globals", "node"]
	},
	"include": ["src", "src/**/*.json", "package.json"],
	"exclude": ["**/*.spec.ts", "**/*.test.ts"]
}

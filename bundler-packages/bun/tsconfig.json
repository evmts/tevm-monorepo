{
	"extends": "@tevm/tsconfig/base.json",
	"compilerOptions": {
		"plugins": [
			{
				"name": "@evmts/ts-plugin"
			}
		],
		"rootDir": "src",
		"outDir": "types",
		"skipLibCheck": true,
		"types": ["bun-types", "vitest/globals"]
	},
	"include": ["src", "src/**/*.json", "src/**/*.sol"],
	"exclude": ["**/*.spec.ts", "**/*.test.ts"]
}

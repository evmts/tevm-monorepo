{
	"name": "mud-template-react",
	"private": true,
	"scripts": {
		"prebuild": "(forge --version || bun foundry:up)",
		"build": "bun recursive run build",
		"predev": "bun prebuild",
		"dev": "concurrently -n contracts,client -c cyan,magenta \"cd packages/contracts && bun run dev\" \"cd packages/client && bun run dev\"",
		"dev:client": "bun --filter 'client' run dev",
		"dev:contracts": "bun --filter 'contracts' dev",
		"foundry:up": "curl -L https://foundry.paradigm.xyz | bash && bash $HOME/.foundry/bin/foundryup",
		"mud:up": "bun mud set-version --tag main && bun install",
		"pretest": "bun prebuild",
		"test": "bun recursive run test"
	},
	"devDependencies": {
		"@latticexyz/cli": "2.0.0-main-6cc49119",
		"@typescript-eslint/eslint-plugin": "5.46.1",
		"@typescript-eslint/parser": "5.46.1",
		"concurrently": "^8.0.1",
		"eslint": "8.29.0",
		"rimraf": "^3.0.2",
		"typescript": "5.1.6"
	},
	"engines": {
		"bun": "8.x",
		"node": "18.x"
	}
}

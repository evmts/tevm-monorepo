{
  "name": "@evmts/viem",
  "version": "0.8.1",
  "private": false,
  "description": "A collection of viem.js utilities for working with Evmts",
  "keywords": [
    "viem",
    "solidity",
    "forge",
    "foundry",
    "sol",
    "typescript",
    "web3",
    "blockchain"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/evmts/evmts-monorepo.git",
    "directory": "runtime/viem"
  },
  "license": "MIT",
  "contributors": [
    "Will Cory <willcory10@gmail.com>"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "src/index.ts",
  "files": [
    "dist",
    "src",
    "types"
  ],
  "scripts": {
    "build": "nx run-many --targets=build:dist,build:types --projects=@evmts/viem ",
    "build:dist": "tsup",
    "build:types": "tsc --emitDeclarationOnly || echo 'TODO fix viem types'",
    "clean": "rm -rf node_modules && rm -rf artifacts && rm -rf dist && rm -rf cache",
    "format": "rome format . --write",
    "format:check": "rome format .",
    "lint": "rome check . --apply-unsafe",
    "lint:check": "rome check . --verbose",
    "package:up": "pnpm up --latest",
    "test": "vitest --coverage",
    "test:coverage": "vitest run --coverage",
    "test:run": "vitest run",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@evmts/core": "workspace:*",
    "@evmts/tsconfig": "workspace:^",
    "@vitest/coverage-v8": "^0.34.4",
    "@vitest/ui": "^0.34.4",
    "abitype": "^0.9.8",
    "rome": "^12.1.3",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "viem": "^1.10.14",
    "vitest": "^0.34.4",
    "zod": "^3.22.2"
  },
  "peerDependencies": {
    "viem": "1.x.x"
  },
  "publishConfig": {
    "access": "public"
  }
}

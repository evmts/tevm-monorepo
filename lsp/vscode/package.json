{
  "private": true,
  "name": "@tevm/vscode",
  "version": "1.0.0-next.131",
  "repository": {
    "type": "git",
    "url": "https://github.com/evmts/tevm-monorepo.git",
    "directory": "lsp/vscode"
  },
  "categories": [
    "Programming Languages"
  ],
  "displayName": "Tevm Language Features",
  "description": "TypeScript language support for Solidity contracts in JS/TS files with Tevm",
  "author": "tevm",
  "publisher": "tevm",
  "engines": {
    "vscode": "^1.82.0"
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:solidity"
  ],
  "main": "./dist/client.js",
  "contributes": {
    "languages": [
      {
        "id": "solidity",
        "extensions": [".sol"],
        "aliases": ["Solidity", "solidity", "sol"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "solidity",
        "scopeName": "source.solidity",
        "path": "./syntaxes/solidity.tmLanguage.json"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "solidity",
        "scopes": {
          "property": ["variable.other.property.solidity"],
          "function": ["entity.name.function.solidity"],
          "variable": ["variable.other.solidity"],
          "keyword": ["keyword.control.solidity"],
          "type": ["entity.name.type.solidity"],
          "class": ["entity.name.type.class.solidity"]
        }
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Tevm",
      "properties": {
        "tevm.solcVersion": {
          "type": "string",
          "default": "0.8.28",
          "description": "Solidity compiler version to use"
        },
        "tevm.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug mode"
        }
      }
    }
  },
  "scripts": {
    "build": "node scripts/build -- --minify",
    "watch": "npm run build -- --watch",
    "pack": "npm run build && vsce package --pre-release",
    "release": "npm run build && vsce publish --pre-release"
  },
  "devDependencies": {
    "@tevm/lsp": "workspace:^",
    "@tevm/tsconfig": "workspace:^",
    "@tevm/tsupconfig": "workspace:^",
    "@types/vscode": "^1.97.0",
    "@volar/language-server": "~2.4.11",
    "@volar/vscode": "~2.4.11",
    "esbuild": "^0.25.0",
    "vsce": "^2.15.0",
    "vscode-languageclient": "^9.0.1"
  }
}
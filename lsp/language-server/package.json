{
  "name": "@evmts/language-server",
  "version": "0.0.1",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf node_modules && rm -rf artifacts && rm -rf dist && rm -rf cache",
    "format": "rome format . --write",
    "format:check": "rome format .",
    "lint": "rome check . --apply-unsafe --verbose",
    "lint:check": "rome check .",
    "package:up": "pnpm up --latest",
    "//test": "vitest",
    "//test:run": "vitest --run",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "bin": {
    "evmts-language-server": "./bin/evmts-language-server.js"
  },
  "dependencies": {
    "@volar/language-core": "1.7.8",
    "@volar/language-server": "1.7.8",
    "@volar/language-service": "1.7.8",
    "volar-service-css": "0.0.8",
    "volar-service-emmet": "0.0.8",
    "volar-service-html": "0.0.8",
    "vscode-html-languageservice": "5.0.6"
  },
  "devDependencies": {
    "rome": "^12.1.3",
    "typescript": "^5.1.3"
  }
}

{
  "name": "@evmts/vscode",
  "displayName": "Evmts Language Features",
  "version": "0.0.1",
  "private": true,
  "description": "Evmts Language Features",
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/volarjs/starter.git",
    "directory": "packages/vscode"
  },
  "author": "volarjs",
  "contributors": [
    "Will Cory <willcory10@gmail.com>"
  ],
  "publisher": "volarjs",
  "type": "module",
  "main": "dist/extension.cjs",
  "module": "dist/extension.js",
  "types": "types/index.d.ts",
  "scripts": {
    "build": "nx run-many --targets=build:dist,build:types --projects=@evmts/vscode ",
    "build:dist": "tsup",
    "build:types": "tsc --emitDeclarationOnly",
    "pack": "npm run build && vsce package --pre-release",
    "release": "npm run build && vsce publish --pre-release",
    "watch": "tsup --watch"
  },
  "contributes": {
    "languages": [
      {
        "id": "ts",
        "extensions": [
          ".jsx",
          ".js",
          ".ts",
          ".tsx"
        ]
      },
      {
        "id": "sol",
        "extensions": [
          ".sol"
        ]
      }
    ]
  },
  "activationEvents": [
    "onLanguage:sol",
    "onLanguage:ts"
  ],
  "dependencies": {
    "@evmts/language-server": "workspace:^"
  },
  "devDependencies": {
    "@evmts/tsconfig": "workspace:^",
    "@types/vscode": "1.79.1",
    "@volar/language-server": "1.7.8",
    "@volar/vscode": "1.8.0",
    "esbuild": "0.18.8",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6",
    "vsce": "^2.15.0",
    "vscode-languageclient": "^8.1.0"
  },
  "engines": {
    "vscode": "^1.67.0"
  }
}

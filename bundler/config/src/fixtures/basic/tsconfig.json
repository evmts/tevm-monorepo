{
  "extends": "@evmts/tsconfig/base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "types",
    "skipLibCheck": true,
    "plugins": [{
      "name": "@evmts/ts-plugin",
      "libs": ["mylib"]
    }],
		"paths": {
			"@/*": ["./*"]
		}
  },
  "include": [
    "src",
    "src/**/*.json"
  ]
}

{
  "extends": "@tevm/tsconfig/base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "types",
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "@tevm/ts-plugin",
        "libs": [
          "mylib"
        ]
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "src",
    "src/**/*.json"
  ]
}
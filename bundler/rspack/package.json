{
	"name": "@tevm/rspack-plugin",
	"version": "1.0.0-next.21",
	"private": false,
	"description": "An (experimental) rspack plugin for tevm",
	"keywords": [
		"rspack",
		"plugin",
		"solidity",
		"sol",
		"tevm"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/evmts/tevm-monorepo.git",
		"directory": "bundler/rspack"
	},
	"license": "MIT",
	"contributors": [
		"Will Cory <willcory10@gmail.com>"
	],
	"type": "module",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		}
	},
	"main": "dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"types",
		"src"
	],
	"scripts": {
		"build": "nx run-many --targets=build:dist,build:types --projects=@tevm/rspack-plugin ",
		"build:dist": "tsup",
		"build:types": "tsup --dts-only",
		"clean": "rm -rf node_modules && rm -rf artifacts && rm -rf dist && rm -rf cache",
		"format": "rome format . --write",
		"format:check": "rome format .",
		"generate:docs": "typedoc",
		"lint": "rome check . --apply-unsafe",
		"lint:check": "rome check . --verbose",
		"lint:deps": "bunx depcheck",
		"lint:package": "bunx publint --strict && attw --pack",
		"test": "vitest",
		"test:run": "vitest run",
		"test:ui": "vitest --ui"
	},
	"dependencies": {
		"@tevm/unplugin": "workspace:^"
	},
	"devDependencies": {
		"@tevm/tsconfig": "workspace:^",
		"@tevm/tsupconfig": "workspace:^"
	},
	"publishConfig": {
		"access": "public"
	}
}
